<%- include('./partials/header.ejs') %>
    <div class="w-full h-screen bg-zinc-300 bg-center bg-cover  flex items-center justify-center">
        <div class="w-[25vw]  bg-white px-20
         py-10 rounded-[30px]">
          <h1 class="text-3xl mb-10 text-center font-semibold
           text-zinc-700 tracking-tighter capitalize 
           leading-none">Create New Account</h1>

          <form action="/register" method="post">
            <input  type="text" name="username" placeholder="username" class="border-2 rounded-md block mt-2 w-full px-3 py-2">
            <input  type="text" name="fullname" placeholder="full name" class="border-2 rounded-md block mt-2 w-full px-3 py-2">
            <input  type="email" name="email" placeholder="email" class="border-2 rounded-md block mt-2 w-full px-3 py-2">
            <input  type="number" name="contact" placeholder="contact" class="border-2 rounded-md block mt-2 w-full px-3 py-2">
            <input  type="password" name="password" placeholder="password" class="border-2 rounded-md block mt-2 w-full px-3 py-2">
            <input  type="submit" value="Create New Account" class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full">
            
            <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 max-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection. </p>
    
          </form>
          <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/" >Login Existing Account</a>
        </div>
      </div>

      <%- include('./partials/footer.ejs') %>