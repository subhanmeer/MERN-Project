<%- include('./partials/header.ejs') %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1>Create a New Post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class=" text-black text block w-1/3 px-3 py-2 border-2 rounded-md  mt-2" type="file" name="postimage">
        <input class=" text-black text block w-1/3 px-3 py-2 border-2 rounded-md  mt-2" type="text" placeholder="title" name="title">
        <textarea class=" text-black text block w-1/3 h-60 px-3 py-2 border-2 rounded-md  mt-2" type="text" placeholder="Description" name="description"></textarea>
        <input class=" text-black text block w-1/3 px-3 py-2   mt-2 rounded-md bg-red-700" type="submit" value="Create Post">
    </form>

</div>
